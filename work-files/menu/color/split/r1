IndexAuthor     "index_author"              MT_COLOR_INDEX_AUTHOR             CF_REGEX
IndexCollapsed  "index_collapsed"           MT_COLOR_INDEX_COLLAPSED          CF_REGEX
IndexDate       "index_date"                MT_COLOR_INDEX_DATE               CF_REGEX
IndexFlags      "index_flags"               MT_COLOR_INDEX_FLAGS              CF_REGEX
IndexLabel      "index_label"               MT_COLOR_INDEX_LABEL              CF_REGEX
IndexNumber     "index_number"              MT_COLOR_INDEX_NUMBER             CF_REGEX
IndexSize       "index_size"                MT_COLOR_INDEX_SIZE               CF_REGEX
IndexSubject    "index_subject"             MT_COLOR_INDEX_SUBJECT            CF_REGEX
IndexTag        "index_tag"                 MT_COLOR_INDEX_TAG                CF_REGEX
IndexTags       "index_tags"                MT_COLOR_INDEX_TAGS               CF_REGEX

simple_search: "~f %s | ~s %s"

